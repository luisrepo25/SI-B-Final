# ============================================
# CONFIGURACIÓN LOCAL - Django Backend
# ============================================

# Django Secret Key
SECRET_KEY=your-secret-key-here

# Debug Mode
DEBUG=True

# Database (Local - SQLite por defecto)
# Para usar PostgreSQL local, descomenta y configura:
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# ============================================
# FIREBASE CLOUD MESSAGING (FCM)
# ============================================

# Activar señales FCM automáticas
HABILITAR_SEÑAL_FCM=true

# Ruta al archivo de credenciales de Firebase (DESARROLLO LOCAL)
# Descarga tu archivo firebase-service-account.json y colócalo en la raíz del proyecto
RUTA_CUENTA_SERVICIO_FIREBASE=firebase-service-account.json

# Alternativamente, puedes usar Base64 (igual que Railway)
# FIREBASE_CREDENTIALS_BASE64=tu_base64_aqui

# ============================================
# BACKUPS AUTOMÁTICOS
# ============================================
ENABLE_AUTOMATIC_BACKUPS=false

# ============================================
# CORS (Frontend)
# ============================================
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://turismosi2.netlify.app
